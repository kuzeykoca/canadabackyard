<div class="article">
    <div class="image">
        <img src="{{ image }}" alt="{{ node.label }}"/>
    </div>
    <h1 class="title">
        {{ label[0] }}
    </h1>
    <div class="content">
        {{ content.body }}
    </div>

    <hr>
    <h2>
        Recent articles from {{ category }}
    </h2>

    <div class="recent-articles space">
        {% for article in recentArticles %}
            {% include '@main/templates/components/mini-article.html.twig' with {'article': article} %}
        {% endfor %}
    </div>
</div>
