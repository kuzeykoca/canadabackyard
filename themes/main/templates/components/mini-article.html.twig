<div class="box">
    <div class="article-mini">
        <img src="{{ article.image }}" alt=""/>
        <div class="content">
            <h2>
                <a href="{{ article.url }}">
                    {{ article.title }}
                </a>
            </h2>
            <div>
                {{ article.body|raw }}
            </div>

            <a class="read-more" href="{{ article.url }}">
                Read more
            </a>
        </div>
    </div>
</div>
